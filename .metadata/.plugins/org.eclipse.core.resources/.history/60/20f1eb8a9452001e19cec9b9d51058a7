setTimeout(function() {
	$("#userInfoDiv").fadeOut(1000, function() {
		$(this).remove();
	});
}, 8000);

$(document).ready(function() {
	$('.datepicker').datepicker({
		format: 'yyyy-mm-dd',
		autoclose: true,
		todayHighlight: true
	});
});



$(document).ready(function() {
    // Function to add Fast Cash options to the dropdown
    function addFastCashOptions() {
        const fastCashOptions = [1000, 2000, 5000, 10000];
        const dropdown = $("#withdrawal-amount");

        dropdown.empty(); // Clear any existing options

        fastCashOptions.forEach(amount => {
            const option = $(`<option value="${amount}">$${amount}</option>`);
            dropdown.append(option);
        });
    }

    // Listen for changes in the dropdown
    $("#withdrawal-method").change(function() {
        if ($(this).val() === "Online") {
            // If "Fast Cash" is selected, add the Fast Cash options to the dropdown
            addFastCashOptions();
        } else {
            // If another option is selected, remove the Fast Cash options
            $("#withdrawal-amount").empty();
        }
    });
});

